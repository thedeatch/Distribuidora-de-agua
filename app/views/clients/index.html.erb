<% provide(:title, "Clientes") %>
<html>
  <head>
    <meta charset="UTF-8">

  </head>
  <body>
    <div class="container">
    <p>
    <h1>Clientes</h1>
    </p>  
    <div class="table-responsive-md">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>RUT</th>
          <th>Email</th>
          <th>Teléfono</th>
          <th>Dirección</th>
          <th>Opciones</th>

        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.first_name %></td>
            <td><%= client.last_name %></td>
            <td><%= client.rut %></td>
            <td><%= client.email %></td>
            <td><%= client.phone%></td>
            <td><%= client.address%></td>


            <td><%= link_to edit_client_path(client), class: "btn btn-primary" do %>
                  <i class="fas fa-user-edit"></i> Editar
                <% end %>
                <%= link_to client_path(client),
                          method: :delete,
                          data: {confirm: '¿Estas seguro?'}, class: "btn btn-danger" do %>
                            <i class="far fa-trash-alt">  </i> Eliminar </td>

                <% end %>

          </tr>
          <% end %>
      </tbody>
    </table>
    </div>
  </div>
  </body>
</html>
