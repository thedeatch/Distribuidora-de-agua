
<body>
  <div class="container">
    <h2>Ingrese datos</h2>
    <form action="/drivers">
      <div class="form-group">
        <%= form_for(@driver) do |f| %>
        <% if @driver.errors.any? %>
        <%= pluralize(@driver.errors.count, "Errores") %>
        <% @driver.errors.full_messages.each do |error| %>
        <%= error %>
        <% end %>
        <% end %>
        <%= f.label :Nombre %>
        <%= f.text_field :first_name, class: 'form-control' %>
        <%= f.label :Apellido %>
        <%= f.text_field :last_name, class: 'form-control' %>
        <%= f.label :RUT %>
        <%= f.text_field :rut, class: 'form-control' %>
        <%= f.label :Sueldo %>
        <%= f.text_field :income, class: 'form-control' %>
        <%= f.label :Vigencia %>
        <%= f.text_field :license, class: 'form-control' %>
        <%= f.label :FechaNacimiento %>
        <%= f.text_field :birthday, class: 'form-control' %>
      </div>
        <%= f.submit "Aceptar", class: "btn btn-primary"%>

        <% end %>
    </form>
  </div>
</body>
