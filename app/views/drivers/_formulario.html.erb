
<body>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@driver) do |f| %>
          <% if @driver.errors.any? %>
            <%= pluralize(@driver.errors.count, "Errores") %>
            <% @driver.errors.full_messages.each do |error| %>
              <%= error %>
            <% end %>
          <% end %>
          <p>
          <%= f.label :Nombre %>
          <%= f.text_field :first_name, class: 'form-control', autocomplete: 'off' %>
          </p>
          <p>
          <%= f.label :Apellido %>
          <%= f.text_field :last_name, class: 'form-control', autocomplete: 'off' %>
          </p>
          <p>
          <%= f.label :RUT %>
          <%= f.text_field :rut, class: 'form-control', autocomplete: 'off', id: 'rut' %>
          </p>
          <p>
          <%= f.label :Sueldo %>
          <%= f.text_field :income, class: 'form-control', autocomplete: 'off' %>
          </p>
          <p>
          <%=f.label :Vigencia %>
          <div>
          <%= f.label :Vigencia, "Activo ", :value => true %>
          <%= f.radio_button :license, true %>
          <%= f.label :Vigencia, " Inactivo", :value => false %>
          <%= f.radio_button :license, false %>
          </div>
          </p> 
          <p>
          <%= f.label :Fecha_Nacimiento %> 
          <div>
          <%= f.date_select :birthday, :order => [:day, :month, :year], start_year: 1950, autocomplete: 'off' %> 
          </div> 
          </p> 

          <p>
          <%= f.submit "Aceptar", class: "btn btn-primary"%>
          </p>
        <% end %>
      </div>
  </div>
</body>
