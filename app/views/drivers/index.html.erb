<% provide(:title, "Conductores") %>
<html>
  <head>
    <meta charset="UTF-8">
  </head>
  <body>
    <div class="container">
    <p>
    <h1>Conductores</h1>
    </p>
    <div class="table-responsive-md">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>RUT</th>
          <th>Sueldo</th>
          <th>Vigencia</th>
          <th>Fecha de nacimiento</th> 
          <th>Edad</th>          
          <th>Opciones</th>

        </tr>
      </thead>
      <tbody>
        <% @drivers.each do |driver| %>
          <tr>
            <td><%= driver.first_name %></td>
            <td><%= driver.last_name %></td>
            <td><%= driver.rut %></td>
            <td><%= driver.income %></td>
            <td><%= driver.estadoLicencia%></td>
            <td><%= driver.birthday%></td> 
            <td><%= driver.age%></td>
            <td><%= link_to edit_driver_path(driver), class: "btn btn-primary" do %>
                  <i class="fas fa-user-edit"></i> Editar
                <% end %>  
                <%= link_to driver_path(driver), class: "btn btn-info" do %> 
                  <i class="fas fa-info"></i> Detalles 
                <% end %>
                <% if can? :destroy, driver %>
                  <%= link_to driver_path(driver),
                            method: :delete,
                            data: {confirm: 'Â¿Estas seguro?'}, class: "btn btn-danger" do %>
                              <i class="far fa-trash-alt">  </i> Eliminar </td>

                  <% end %>
                <% end %>
          </tr>
          <% end %>
      </tbody>
    </table>
    </div>
  </div>
  </body>
</html>
