
<body>
  <div class="row">
    <div class="col-md-6">
        <%= form_for [@client,@product,@order] do |f| %>



          <% if @order.errors.any? %>
            <ul class = "alert alert-warning">
              <%= pluralize(@order.errors.count, "Errores") %>

              <% @order.errors.full_messages.each do |error| %>

                <li><%= error %></li>
              <% end %>
            </ul>
          <% end %>
          <p>
            <%= f.label :Fecha_de_entrega %>

            <div class='input-group date' id='datetimepicker'>
              <%= f.text_field :delivery_date, class: 'form-control', autocomplete: 'off' %>
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>

          </P>


          <p>
          <%= f.label :Cantidad %>
          <%= f.text_field :amount, class: 'form-control' %>
          </p>
          <p>
          <%= f.label :Cliente %>


            <%= f.collection_select :client_id, Client.all, :id, :fullName, type: "button", include_blank: "Seleccione cliente", id: "simple-example"%>
            </p>
          </p>
          <p>
          <%= f.label :Producto %>
            <p>
            <%= f.collection_select :product_id, Product.all, :id, :liters, type: "button", include_blank: "Seleccione producto", class: "btn btn-default btn-sm dropdown-toggle"%>
            </p>
          </p>
          <p>
          <%= f.label :Camión %>
            <p>
            <%= f.collection_select :truck_id, Truck.all, :id, :number_plate, type: "button", data_toggle:"dropdown", include_blank: "Seleccione camión", class: "btn btn-mini dropdown toggle"%>

            </p>
          </p>
          <p>
          <%= f.submit "Aceptar", class: "btn btn-primary" %>
          </p>
        <% end %>


    </div>

</body>
