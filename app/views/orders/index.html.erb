<% provide(:title, "Pedidos") %>
<html>
  <head>
    <meta charset="UTF-8">
  </head>
  <body>
    <div class="container">
    <h1>Pedidos</h1>

    <div class="table-responsive-md">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th>Número</th>
          <th>Fecha Entrega</th>
          <th>Cantidad</th>
          <th>RUT Cliente</th>
          <th>Nombre </th>
          <th>Apellido </th>
          <th>Camión</th>
          <th>Producto</th> 
          <th>Valor</th>
          <th>Opciones</th>


        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.delivery_date %></td>
            <td><%= order.amount %></td>
            <td><%= order.client.rut %></td>
            <td><%= order.client.first_name %></td>
            <td><%= order.client.last_name %></td>
            <td><%= order.truck.number_plate %></td>
            <td><%= order.product.detail %></td> 
            <td><%= order.calcular_valor %> CLP</td>
            <td><%= link_to edit_order_path(order), class: "btn btn-primary" do %>
                  <i class="far fa-edit"></i> Editar
                <% end %> 
                <% if can? :destroy, order %>                

                  <%= link_to order_path(order),
                            method: :delete,
                            data: {confirm: '¿Estas seguro?'}, class: "btn btn-danger" do %>
                              <i class="far fa-trash-alt">  </i> Eliminar </td>

                  <% end %>
                <% end %>
          </tr>
          <% end %>
      </tbody>
    </table>
    </div>
  </div>
  </body>
</html>
