<% provide(:title, "Productos") %>
<html>
  <head>
    <meta charset="UTF-8">
  </head>
  <body>
    <div class="container">
    <p>
    <h1>Productos</h1>
    </p>
    <div style="overflow-x:auto;">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th>Codigo</th>
          <th>Precio</th>
          <th>Detalles</th>
          <th>Disponibilidad</th>
          <th>Opciones</th>


        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.product_number %></td>
            <td><%= product.price %></td>
            <td><%= product.detail %></td>
            <td><%= product.stock %></td>
            <td><%= link_to edit_product_path(product), class: "btn btn-primary" do %>
                  <i class="far fa-edit"></i> Editar
                <% end %> 
                <% if can? :destroy, product %>

                  <%= link_to product_path(product),
                            method: :delete,
                            data: {confirm: 'Â¿Estas seguro?'}, class: "btn btn-danger" do %>
                              <i class="far fa-trash-alt">  </i> Eliminar </td>

                  <% end %>
                <% end %>

          </tr>
          <% end %>
      </tbody>
    </table>
    </div>
  </div>
  </body>
</html>