<% provide(:title, "Camiones") %>
<html>
  <head>
    <meta charset="UTF-8">
  </head>
  <body>
    <div class="container">
    <p>
    <h1>Camiones</h1>
    </p> 
    <div>  
      <%= render 'layouts/searchbyplate'%>
    </div></br>
    <div style="overflow-x:auto;"> 
    <table class="table table-striped" id="myTable">
      <thead class="thead-dark">
        <tr>
          <th>Patente</th>
          <th>Modelo</th>
          <th>Carga (KG)</th>
          <th>Detalles</th>
          <th>Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% @trucks.each do |truck| %>
          <tr>
            <td><%= truck.number_plate %></td>
            <td><%= truck.name %></td>
            <td><%= truck.load %></td>
            <td><%= truck.detail %></td>
            <td><%= link_to edit_truck_path(truck), class: "btn btn-primary" do %>
                  <i class="far fa-edit"></i> Editar
                <% end %> 
                <% if can? :destroy, truck %>

                  <%= link_to truck_path(truck),
                            method: :delete,
                            data: {confirm: 'Â¿Estas seguro?'}, class: "btn btn-danger" do %>
                              <i class="far fa-trash-alt">  </i> Eliminar </td>

                  <% end %>
                <% end %>

          </tr>
          <% end %>
      </tbody>
    </table>
    </div>
  </div>
  </body>
</html>
